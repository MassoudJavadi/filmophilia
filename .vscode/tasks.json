{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run API Server",
      "type": "shell",
      "command": "make",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Stop API Server",
      "type": "shell",
      "command": "make",
      "args": ["dev-stop"],
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "problemMatcher": []
    },
    {
      "label": "Open PostgreSQL Shell",
      "type": "shell",
      "command": "make",
      "args": ["db"],
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "problemMatcher": []
    },
    {
      "label": "Build API",
      "type": "shell",
      "command": "make",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "make",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Generate (SQLC + Wire)",
      "type": "shell",
      "command": "make",
      "args": ["generate"],
      "options": {
        "cwd": "${workspaceFolder}/apps/api"
      },
      "problemMatcher": []
    }
  ]
}

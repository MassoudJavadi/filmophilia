{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/api",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run ./cmd/api/main.go",
        "cwd": "apps/api"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../../dist/apps/api ./cmd/api/main.go",
        "cwd": "apps/api"
      }
    }
  }
}
